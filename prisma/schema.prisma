datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Car {
  id                      Int        @id @default(autoincrement())
  brand                   String
  model                   String
  type                    String     @default("hatchback")
  doors                   Int        @default(5)
  kw                      Int
  motor                   String     @default("any")
  combustion              String
  transmission            String
  drive                   String     @default("FWD")
  eqLevel                 String
  target_country          String
  discount                Float
  target_market_price     Int
  prices                  CarPrice[]
}

model Country {
  id       Int        @id @default(autoincrement())
  name     String
  abbreviation String
  currency String     @default("Euro")
  prices   CarPrice[]
}

model CarPrice {
  id                            Int     @id @default(autoincrement())
  carId                         Int
  car                           Car     @relation(fields: [carId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  countryId                     Int
  country                       Country @relation(fields: [countryId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  price                         Float?  @default(0)
  available_discount_percentage Float   @default(0)
}
